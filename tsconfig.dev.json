{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "react",
    "declaration": true,
    "target": "esnext",
    "module": "esnext",
    "sourceMap": true,
    "rootDir": "./",
    "outDir": "./lib",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "docs"
  ],
  "exclude": [
    "docs/**/*.mdx"
  ]
}